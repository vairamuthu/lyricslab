<div class="modal-header">
				<a class="close" data-dismiss="modal">&times;</a>
				<h3>Add Translation</h3>
			</div>
			<div class="modal-body">
					<div class="alert  alert-error"  id="sub-alert" style="display: none">
      					<a href="#" class="close" data-dismiss="alert">&times;</a>
      						
							    </div>
				
				
				<%=form_for @translation, :remote => true, :url => {:action => "create"},   :html => {:class=> "form-horizontal"}  do |f|%>
				<fieldset>						
					<%= render :partial => "form", :locals => {:f => f} %>
				</fieldset>
				<% end%>
			</div>
			<div class="modal-footer">
				<a class="btn btn-primary" onclick="$('.modal-body > form').submit();">Save Changes</a>
				<a class="btn" data-dismiss="modal">Close</a>
			</div> 