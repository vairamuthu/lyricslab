<section class="sliceTop"> 

                    <div class="container">

                        <div class="row">
                            <div class="span12 drop-shadow lifted">
								<div class="topQuote">
									<h1>
									
									<strong></strong>
									
									</h1>
									</div>	
                                
                                <div class="topBox clearfix">
                                    <div class="bigIconsColumnsWrapper">
										<article style="margin-left: auto;margin-right: auto;position: relative; padding-left: 30%;padding-right: 30%">
									<h2>Forgot your password?</h2>
									
									<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
									  <%= devise_error_messages! %>
									
									  <div><%= f.label :email %><br />
									  <%= f.email_field :email, :autofocus => true %></div>
									
									  <div><%= f.submit "Send me reset password instructions", :class =>"btn" %></div>
									<% end %>
									
									<%= render "devise/shared/links" %>
										
                                        </article>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section> 


