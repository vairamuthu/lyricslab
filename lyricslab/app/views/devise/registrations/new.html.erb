<section class="sliceTop"> 

                    <div class="container">

                        <div class="row">
                            <div class="span12 drop-shadow lifted">
								<div class="topQuote">
									<h1>
									
									<strong></strong>
									
									</h1>
									</div>	
                                
                                <div class="topBox clearfix">
                                    <div class="bigIconsColumnsWrapper">
										<article style="margin-left: auto;margin-right: auto;position: relative; padding-left: 30%;padding-right: 30%">

											<h2>Sign up</h2>
											
											<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
											  <%= devise_error_messages! %>
											
											  <div><%= f.label :email %><br />
											  <%= f.email_field :email, :autofocus => true %></div>
											
											  <div><%= f.label :password %><br />
											  <%= f.password_field :password %></div>
											
											  <div><%= f.label :password_confirmation %><br />
											  <%= f.password_field :password_confirmation %></div>
											
											  <div><%= f.submit "Sign up", :class => "btn" %></div>
											<% end %>
											
											<%= render "devise/shared/links" %>
										
                                        </article>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section> 


