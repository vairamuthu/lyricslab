<section class="sliceTop"> 
                    <div class="container">
                        <div class="row">
                            <div class="span12 drop-shadow lifted">
								<div class="topQuote">
									<div style="float: left">
									<h1>
									<strong>Roles</strong>															
									</h1></div>	
                                
                                </div>
                                <div style="float: right; padding: 10px"><a class="btn btn-info" href="roles/new"><i class="icon-plus"> </i>Add Role</a> </div>
                                <div class="topBox clearfix">
                                    <div class="bigIconsColumnsWrapper">
										<article style="margin-left: auto;margin-right: auto;position: relative; padding-left: 30%;padding-right: 30%">
											<table class="table table-striped table-bordered">
												<thead>
													<th> S.No </th>
													<th> Role Name </th>
													<th> Functions </th>
												</thead>
												<tbody>
													<% count = 0%>
													<% @roles.each do |role|%>	
														<tr>
															<td><%= count +1%></td>
															<td><%= role.name%></td>
															<td><%= link_to "Show", role_path(role), :class => "firstLevel"%> |
																<%= link_to "Edit", edit_role_path(role), :class => "firstLevel"%> | 
																<%= link_to raw("<i =\"icon-trash\"> </i>Delete"), role_path(role), :method => :delete , :confirm => "Are You Sure?", :class => "firstLevel"%>
																</td>
															  </tr>
															  <%count +=1 %>
													<%end%>
												</tbody>
												</table>
                                        </article>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section> 